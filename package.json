{
  "name": "pilllink_server",
  "version": "1.0.0",
  "description": "PillLink Server",
  "main": "index.js",
  "repository": "https://github.com/rhkdgns95/pilllink_server",
  "author": "KKH",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/jsonwebtoken": "^8.3.5",
    "babel-runtime": "^6.26.0",
    "bcrypt-nodejs": "^0.0.3",
    "class-validator": "^0.11.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "gql-merge": "^0.0.6",
    "graphql": "^14.5.8",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.6",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.3",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.1",
    "pg": "^7.14.0",
    "ts-node": "^8.5.2",
    "typeorm": "^0.2.20",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "predev": "yarn run types",
    "pretypes": "gql-merge -o ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/graph.d.ts",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "cd dist && node ."
  },
  "devDependencies": {
    "copy": "^0.3.2"
  }
}
